
<div class="box">
  		<%= link_to (image_tag pin.image), pin %>
  		<p class="description">
	    <%= pin.description %>
	    </p>
	    <p>
	    	<strong> Dodane przez: <%= link_to pin.user.name, pin.user %></strong>
	    </p>
	    <%= link_to 'Show', pin %>
	    <% if current_user == pin.user %>
	    <p>
		    <%= link_to 'Edit', edit_pin_path(pin) %>
		    <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
		</p>
	    <% end %>
</div>
